<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GroceryAppMvcCore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GroceryAppMvcCore.styles.css" asp-append-version="true" />
    <style>
        body {
            background-image: url('https://img.freepik.com/free-photo/full-length-portrait-young-family-walking_171337-2240.jpg?t=st=1650818698~exp=1650819298~hmac=da1ada37b70b1584cc5d7b239f4462022eb378eec29fd9983c54324e7b267852&w=996');
            background-repeat: no-repeat;
            background-size: cover;
            background-attachment: fixed;
        }
    </style>
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Users" asp-action="Index"><img style="margin-top:0" src="~/css/Images/Capture.PNG"height="50"width="150"/></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Index">Home</a>
                        </li>
                        <li class="dropdown text-white">
                            <a class=" nav-link text-white dropdown-toggle " data-bs-toggle="dropdown">Products</a>
                            <div class="dropdown-menu text-white">
                                <a class="dropdown-item" href="https://localhost:7284/Users/ViewProducts?id=1&msg=2">Dairy Products</a>
                                <a class="dropdown-item" href="https://localhost:7284/Users/ViewProducts?id=2&msg=2">Frozen Foods</a>
                                <a class="dropdown-item" href="https://localhost:7284/Users/ViewProducts?id=3&msg=2">Oils & Pulses</a>
                                <a class="dropdown-item" href="https://localhost:7284/Users/ViewProducts?id=4&msg=2">Packed Foods</a>
                                <a class="dropdown-item" href="https://localhost:7284/Users/ViewProducts?id=5&msg=2">Personal Care</a>
                                <a class="dropdown-item" href="https://localhost:7284/Users/ViewProducts?id=6&msg=2">Pet Care</a>
                                <a class="dropdown-item" href="https://localhost:7284/Users/ViewProducts?id=7&msg=2">All Products</a>
                            </div>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="ViewCart">Your Cart</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="ViewOrders">Your Orders</a>
                        </li>
                        @*<li class="nav-item">

                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Wallet">Wallet</a>
                            </li>*@
                        <li class="nav-item">

                            <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="FeedBack">Feedback</a>
                        </li>
                        

                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">

                           @if(ViewBag.UserName!= null)
                        {
                             <a class="nav-link text-white" style="color:yellow" >Hii <b>@ViewBag.UserName</b></a>
                            
                        }
                        </li>
                        
                        <li class="nav-item">

                            <a class="nav-link text-white btn btn-danger" asp-area="" asp-controller="Users" asp-action="Logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - GroceryAppMvcCore 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
