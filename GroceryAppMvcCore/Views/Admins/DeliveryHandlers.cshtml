    int val = Convert.ToInt32(ViewBag.val);
    //int totalOrders = 0;
    List<Order> orderList = new List<Order>();

    foreach (Order order in Model.Orders)
    {
        if (Model.Deliveries.FirstOrDefault(m => m.OrderId == order.OrderId) == null)
        {
            orderList.Add(order);
        }
    }

