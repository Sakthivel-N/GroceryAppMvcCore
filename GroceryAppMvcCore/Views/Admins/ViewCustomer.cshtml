@model IEnumerable<GroceryAppMvcCore.Models.User>

@{
    ViewData["Title"] = "ViewCustomer";
    Layout = "~/Views/Shared/_AdminsLayout.cshtml";
	string delete = "";
}
<div class="container">
<div class="row">
	<div class="col-lg-12">
		<div class="main-box clearfix">
			<div class="table-responsive">
				<table class="table user-list">
					<thead>
						
						<tr>
							<th><span>User</span></th>
							<th><span>EmailId</span></th>
							<th class="text-center"><span>PhoneNumber</span></th>
							<th><span>Address</span></th>
							<th>&nbsp;</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model) {
							 delete = $"https://localhost:7284/Admins/DeleteUsers?id={item.UserId}";
                        <tr>
							<td>
								<img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="">
								<h5>@Html.DisplayFor(modelItem => item.UserName)</h5>
								<span class="user-subhead">User</span>
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.EmailId)
							</td>
							<td class="text-center">
								<span class="label label-default">@Html.DisplayFor(modelItem => item.PhoneNumber)</span>
							</td>
							<td>
								<h5>@Html.DisplayFor(modelItem => item.Address)</h5>
							</td>
							<td style="width: 20%;">
								
								<button onclick="window.location.href='@delete';" class="btn "><svg xmlns="http://www.w3.org/2000/svg" width="25" height="30" fill="red" class="bi bi-trash" viewBox="0 0 16 16">
  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
</svg></button>
							</td>
						</tr>
						}
						</tbody>
				</table>
			</div>
			
		</div>
	</div>
</div>
</div>


