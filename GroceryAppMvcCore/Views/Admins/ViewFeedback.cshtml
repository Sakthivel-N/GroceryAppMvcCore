@model GroceryAppMvcCore.Models.FeedbackView

@{
    ViewData["Title"] = "ViewFeedback";
    Layout = "~/Views/Shared/_AdminsLayout.cshtml";
}
<style>
    

    .icons i {
        color: #b5b3b3;
        border: 1px solid #b5b3b3;
        padding: 6px;
        margin-left: 4px;
        border-radius: 5px;
        cursor: pointer
    }

    .activity-done {
        font-weight: 600
    }

    .list-group li {
        margin-bottom: 12px
    }

    .list-group-item {
    }

    .list li {
        list-style: none;
        padding: 10px;
        border: 1px solid #e3dada;
        margin-top: 12px;
        border-radius: 5px;
        background: #fff
    }

    .checkicon {
        color: green;
        font-size: 19px
    }

    .date-time {
        font-size: 12px
    }

    .profile-image img {
        margin-left: 3px
    }</style>
<h1 style="text-align:center;color:White;background-color:black;border-radius:30px;">Feedbacks</h1>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">

            <div class="mt-3">
                <ul class="list list-inline">
                    @foreach (var item in Model.Feedbacks)
                    {
                        User user = Model.Users.FirstOrDefault(m => m.UserId == item.UserId);
                        <li class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                <i class="fa fa-check-circle checkicon"></i>
                                <div class="ml-2">
                                    <h6 class="mb-0">@user.UserName</h6>
                                    <div class="d-flex flex-row mt-1 text-black-50 date-time">
                                        <div><i class="fa fa-calendar-o"></i><span class="ml-2">@item.FeedbackTime</span></div>
                                       
                                    

                                    </div>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center">
                                <div class="d-flex flex-column" style="padding-right:400px;">
                                    @item.FeedbackMsg
                                </div> 
                            </div>
                        </li>
                    }


                </ul>
            </div>
        </div>
    </div>
</div>


