@model GroceryAppMvcCore.Models.User

@{
    ViewData["Title"] = "UserLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UserLogin</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UserLogin" asp-controller="Home">
            <div class="form-group">
                <label asp-for="EmailId" class="control-label">EmailId</label>
                <input asp-for="EmailId" class="form-control" />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="login" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <label style="color:red;">@Html.Raw(ViewBag.Message)</label>
        </form>
        
    </div>
</div>