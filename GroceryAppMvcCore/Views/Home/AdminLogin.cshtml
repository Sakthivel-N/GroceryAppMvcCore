@model GroceryAppMvcCore.Models.Admin

@{
    ViewData["Title"] = "AdminLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AdminLogin</h1>



<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminLogin" asp-controller="Home">
            <div class="form-group">
                <label asp-for="AdminName" class="control-label">AdminName</label>
                <input asp-for="AdminName" class="form-control" />
                <span asp-validation-for="AdminName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="login" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
             <label style="color:red;">@Html.Raw(ViewBag.Message)</label>
        </form>

    </div>
</div>




<environment names="Development">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</environment>

@if (ViewBag.Message != null)
{
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Try Again</h4>
                </div>

                <div class="modal-body">
                    <p>ViewBag.Message</p>
                </div>

            </div>
        </div>
    </div>
}
