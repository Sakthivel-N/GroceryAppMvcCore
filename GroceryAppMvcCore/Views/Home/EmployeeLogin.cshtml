@model GroceryAppMvcCore.Models.Employee

@{
    ViewData["Title"] = "EmployeeLogin";
    Layout = "~/Views/Shared/_Login.cshtml";
}


<environment names="Development">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

</environment>




@if (ViewBag.Message != null)
{

    <div class="alert alert-danger alert-dismissible fade show ">
        <strong>Error!</strong> @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="principal-container">
    <div class="container bootstrap snippets bootdey">
        <div class="row">
            <div class="col-md-4 img-content">
                <img class="img-home img-thumbnail" src="https://bootdey.com/img/Content/avatar/avatar7.png">
            </div>
            <div class="col-md-7 form-content">
                <h1 class="title" style="padding-left : 20px">Employee Login</h1>

                <form asp-action="EmployeeLogin" asp-controller="Home">
                    <div class="form-group">
                        <label asp-for="EmployeeName" class="control-label">Employee Name</label>
                        <div class="col-sm-10">
                            <input asp-for="EmployeeName" class="form-control" />
                            <span asp-validation-for="EmployeeName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <div class="col-sm-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group" style="padding-left : 20px">
                        <input type="submit" value="login" class="btn btn-primary" />

                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
